{% extends 'layout.html.twig' %}

{% block title %}
  Auteurs
{% endblock %}
{% block content %}
  <table class="table">
    <thead class="table-dark">
      <tr>
        <th scope="col">Nom</th>
        <th scope="col">Prenom</th>
        <th scope="col">Read</th>
        <th scope="col">Update</th>
        <th scope="col">Delete</th>
      </tr>
    </thead>
    <tbody>
      {% for auteur in auteurs %}
        <tr>
          <td>{{ auteur.nom }}</td>
          <td>{{ auteur.prenom }}</td>
          <td>
            <a href="{{ path('app_auteur', { id: auteur.id }) }}"><i class="fas fa-eye mx-1 text-success"></i></a>
          </td>
          <td>
            <a href="{{ path('app_auteur_update', { id: auteur.id }) }}"><i class="fas fa-edit mx-1 text-success"></i></a>
          </td>
          <td>
            <a href="{{ path('app_auteur_delete', { id: auteur.id }) }}" onClick="return confirm('etes vous sur de vouloir supprimer l\'article ')"><i class="fas fa-trash mx-1 text-danger"></i></a>
          </td>
        </tr>
      {% endfor %}
    </tbody>
  </table>
{% endblock %}
