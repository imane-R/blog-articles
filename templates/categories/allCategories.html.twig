{% extends 'layout.html.twig' %}

{% block title %}
  Categories
{% endblock %}
{% block content %}
  <table class="table">
    <thead class="table-dark">
      <tr>
        <th scope="col">Nom</th>
        <th scope="col">Update</th>
        <th scope="col">Delete</th>
      </tr>
    </thead>
    <tbody>
      {% for categorie in categories %}
        <tr>
          <td>{{ categorie.nom }}</td>
          <td>
            <a href="{{ path('app_categorie_update', { id: categorie.id }) }}"><i class="fas fa-edit mx-1 text-success"></i></a>
          </td>
          <td>
            <a href="{{ path('app_categorie_delete', { id: categorie.id }) }}" onClick="return confirm('etes vous sur de vouloir supprimer la categorie ')"><i class="fas fa-trash mx-1 text-danger"></i></a>
          </td>
        </tr>
      {% endfor %}
    </tbody>
  </table>
{% endblock %}
